<header class="drawer-navbar" role="banner">
  <div class="drawer-container">
    <div class="drawer-navbar-header">
      <a class="drawer-brand" href="/">すもー禁ぐ</a>
      <button type="button" class="drawer-toggle drawer-hamburger">
        <span class="sr-only">toggle navigation</span>
        <span class="drawer-hamburger-icon"></span>
      </button>
    </div>
    <nav class="drawer-nav" role="navigation">
      <ul class="drawer-menu">
        <li>
          <%= link_to users_path, class: 'drawer-menu-item' do%>
          <i class="fas fa-signal icon"></i>禁煙ランキング
          <% end %>
        </li>
        <li>
          <%= link_to posts_path, class: 'drawer-menu-item' do %>
          <i class="fas fa-smoking-ban icon"></i>禁煙ライフ
          <% end %>
        </li>
        <li>
          <%= link_to new_post_path, class: 'drawer-menu-item' do %>
          <i class="fas fa-edit icon"></i>禁煙ライフ投稿
          <% end %>
        </li>
        
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user), class: 'drawer-menu-item' do %>
            <i class="fas fa-user icon"></i>プロフィール
            <% end %>
          </li>
          <li>
            <%= link_to search_users_path, class: 'drawer-menu-item' do %>
            <i class="fas fa-search icon"></i>検索
            <% end %>
          </li>
          <li>
            <%= link_to notifications_path, class: 'drawer-menu-item' do %>
            <i class="far fa-bell icon"></i>
            通知
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'drawer-menu-item' do %>
            <i class="fas fa-sign-out-alt icon"></i>ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_registration_path, class: 'drawer-menu-item' do %>
              <i class="fas fa-user-plus icon"></i>新規登録
              <% end %>
          </li>
          <li>
            <%= link_to user_session_path, class: 'drawer-menu-item' do %>
            <i class="fas fa-sign-out-alt icon"></i>ログイン
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>