<%= stylesheet_link_tag "_navbar", :media => "all" %>

<header class="drawer-navbar " role="banner">
  <div class="drawer-container">
    <div class="drawer-navbar-header">
      <a class="drawer-brand" href="#">禁煙ランキング</a>
      <button type="button" class="drawer-toggle drawer-hamburger">
        <span class="sr-only">toggle navigation</span>
        <span class="drawer-hamburger-icon"></span>
      </button>
    </div>
    <nav class="drawer-nav" role="navigation">
      <ul class="drawer-menu">
        <li><%= link_to '禁煙ランキング', users_path, class: 'drawer-menu-item'%></li>
        <li><%= link_to '禁煙ライフ', posts_path, class: 'drawer-menu-item'%></li>
        <li><%= link_to '禁煙ライフ投稿', new_post_path, class: 'drawer-menu-item'%></li>
        
        <% if user_signed_in? %>
          <li><%= link_to 'マイページ', user_path(current_user), class: 'drawer-menu-item'%></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'drawer-menu-item'%></li>
        <% else %>
          <li><%= link_to '新規登録', new_user_registration_path, class: 'drawer-menu-item'%></li>
          <li><%= link_to 'ログイン', user_session_path, class: 'drawer-menu-item'%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>