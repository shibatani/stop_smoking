<i class="fas fa-edit fa-3x modal_botton" data-toggle="modal" data-target="#modal-example"></i>
<div class="modal" id="modal-example" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>

        <div class="post mt-2">
          <div class="discription">
            <h6 class="text-center">禁煙生活で感じたことを気軽に投稿してみよう。
            </h6>
          </div>
          <div class="form_groups">
            <div class="form_group">
              <%= form_for @post do |f| %>
              <%= f.text_area :body, :placeholder => "コメントを追加...", class: "form" %>
              <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
              <i class="far fa-paper-plane fa-lg mb-3"></i>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="post_index">
  <% @posts.each do |post| %>
    <div class="card border-none mb-3 mx-auto">
      <%= render 'card/card', post: post %>
    </div>
  <% end %>
</div>


