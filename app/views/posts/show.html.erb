<div class="post_show">
  <div class="card border-none mb-3 mx-auto">
    <%= render 'card/card', post: @post %>

    <div class="comment">
      <div class="bg-transparent ml-2">
        <% @post.comments.each do |comment| %>
        <hr>
        <strong>
          <% if comment.user.image? %>
            <%= image_tag comment.user.image.url, class: "icon" %> <%= link_to comment.user.name, user_path(comment.user.id), class: "user_name" %>
          <% else %>
            <%= image_tag 'profile.png', class: "no_user_image" %>
            <%= link_to comment.user.name, user_path(comment.user.id), class: "user_name" %>
          <% end %>
        </strong>
        <div class="post_content ml-3">
          <p><%= comment.body %></p>
        </div>
        <% end %>
        <hr>
      </div>
    </div>

    <div class="form_groups">
      <div class="form_group">
        <%= form_for [@post, @comment] do |f| %>
        <%= f.text_area :body, :placeholder => "コメントを追加...", class: "form" %>
        <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
        <i class="far fa-paper-plane fa-lg mb-3"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>