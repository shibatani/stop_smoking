<%= stylesheet_link_tag "_users", :media => "all" %>
<div class="search_user">
  <h5>友達を探す</h5>
  <div class="search_form">
    <%= form_with url: search_users_path, method: :get, local: true do |f| %>
    <%= f.text_field :name, placeholder:"お名前", class: "form"%>
    <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
    <i class="fas fa-search"></i>
    <% end %>
    <% end %>
  </div>


  <div class="display_user">
    <% @users.each do |user| %>
    <hr>
    <div class="form-inline">
      <strong class="mr-4">
      <% if user.image? %>
      <%= image_tag user.image.url, class: "icon" %>
      <% else %>
      <i class="far fa-user-circle icon"></i>
      <% end %>
      <%= link_to user.name, user_path(user.id)%>
    </strong>
    </div>
    <% end %>
    <hr>
  </div>
</div>
