<div class="search_user">
  <h5 class="ml-2">友達を探す</h5>
  <div class="search_form ml-2">
    <%= form_with url: search_users_path, method: :get, local: true do |f| %>
    <%= f.text_field :name, value: params[:name], class: "form"%>
    <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
    <i class="fas fa-search"></i>
    <% end %>
    <% end %>
  </div>

  <div class="display_user">
    <% @users.each do |user| %>
    <hr>
    <div class="form-inline ml-2">
      <strong class="mr-4">
        <% if user.image? %>
          <%= image_tag user.image.url, class: "icon" %>
          <%= link_to user.name, user_path(user.id), class: "user_name" %>
        <% else %>
          <%= image_tag 'profile.png', class: "no_user_image" %>
          <%= link_to user.name, user_path(user.id), class: "user_name" %>
        <% end %>
      </strong>
    </div>
    <% end %>
    <hr>
  </div>
</div>
