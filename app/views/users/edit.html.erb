<%= stylesheet_link_tag "_users", :media => "all" %>

<div class="register_smoker">
  <div class="form_groups">
    <%= form_with model: @user, local: true do |f| %>
    <dl>
      <dt>
        <p>プロフィール画像</p>
      </dt>
      <dd>
        <div class="form_group">
          <%= f.file_field :image, class:"upload_image initial-height" %>
        </div>
      </dd>
    </dl>
    <dl>
    <dl>
      <dt>
        <p>名前</p>
      </dt>
      <dd>
        <div class="form_group">
          <%= f.text_area :name, :placeholder => "名前を入力して下さい", class:"input_name initial-height" %>
        </div>
      </dd>
    </dl>
    <dl>
      <dt>
        <p>一言</p>
      </dt>
      <dd>
        <div class="form_group">
          <%= f.text_area :word, :placeholder => "何か一言お願いします", class:"input_word initial-height" %>
        </div>
      </dd>
    </dl>
    <dl>
      <dt>
        <p>購入頻度</p>
      </dt>
      <dd>
        <div class="form_group" style="display:inline-flex">
          <%= f.text_area :days, :placeholder => "何日に1回",　autofocus: true, autocomplete: "email", class:"input_name initial-height" %>
          <%= f.text_area :boxes, :placeholder => "何箱",　autofocus: true, autocomplete: "email", class:"input_name initial-height" %>
        </div>
      </dd>
    </dl>
    <div class="form_group">
      <%= f.submit "送信", data: { confirm: "更新しますか？"}, class:"btn btn-dark btn-lg"  %>
    </div>
    <% end %>
  </div>
</div>