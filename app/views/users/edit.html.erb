<%= stylesheet_link_tag "_users", :media => "all" %>

<div class="register_smoker">
  <div class="card border-none mb-3 p-3 mx-auto">
    <div class="bg-transparent ml-2 mt-2">
      <h5>ユーザー編集</h5>
      <div class="form_groups">
        <%= form_with model: @user, local: true do |f| %>
        <div class="normal">
          <div class="form_group">
            <label>プロフィール画像</label>
            <%= f.file_field :image, class: "upload_image" %>
          </div>
          <div class="form_group">
            <label>名前</label>
            <%= f.text_field :name, :placeholder => "名前を入力して下さい", class: " form" %>
          </div>
          <div class="form_group">
            <label>一言</label>
            <%= f.text_area :word, :placeholder => "何か一言お願いします", class: "form" %>
          </div>
        </div>
        <div class="double">
          <div class="form_group">
            <label>購入頻度</label>
            <div style="display:flex">
              <%= f.text_field :days, autofocus: true, autocomplete: "email", class: "form" %>
              <div class="field">日に1回</div>
              <%= f.text_field :boxes, autofocus: true, autocomplete: "email", class: "form" %>
              <div class="field">箱購入していました。</div>
            </div>
          </div>
        </div>
        <div class="form_group">
          <%= f.submit "送信", data: { confirm: "更新しますか？"}, class: "btn btn-dark btn-lg"  %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>