<%= stylesheet_link_tag "_users", :media => "all" %>

<div class="register_smoker">

  <div class="form_groups">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <dl>
      <dt>
        <p>メールアドレス</p>
      </dt>
      <dd>
        <div class="form_group">
          <%= f.text_area :email, :placeholder => "メールアドレスを入力してください",　autofocus: true, autocomplete: "email", class:"input_name initial-height" %>
        </div>
      </dd>
    </dl>
    <dl>
      <dt>
        <p>パスワード</p>
      </dt>
      <dd>
        <div class="form_group">
          <%= f.text_area :password, :placeholder => "パスワードを入力してください", autocomplete: "new-password", class:"input_name initial-height" %>
        </div>
      </dd>
    </dl>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

    <div class="form_group">
      <%= f.submit "送信", data: { confirm: "更新しますか？"}, class:"btn btn-dark btn-lg"  %>
    </div>
    <% end %>
  </div>
</div>





