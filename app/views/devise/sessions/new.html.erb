<%= stylesheet_link_tag "_users", :media => "all" %>

<div class="register_smoker">
  <div class="card border-none mb-3 p-3 mx-auto">
    <div class="bg-transparent ml-2 mt-2">
      <h5>ログイン</h5>
      <div class="form_groups">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="normal">
          <div class="form_group">
            <label>メールアドレス</label>
            <%= f.text_field :email, :placeholder => "メールアドレスを入力して下さい", class: " form" %>
          </div>
          <div class="form_group">
            <label>パスワード</label>
            <%= f.text_field :password, :placeholder => "パスワードを入力して下さい", class: "form" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="form_group">
          <%= f.submit "ログイン", data: { confirm: "ログインしますか？"}, class:"btn btn-dark w-100"  %>
        </div>

        <hr>
        <div class="guest_login">
          <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class:"btn btn-warning mt-3 w-100" %>
        </div>
        <div class="register_user">
          <%= link_to 'アカウントをお持ちでない方', new_user_registration_path, class:"btn btn-secondary w-100" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>





