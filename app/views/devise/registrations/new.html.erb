<%= stylesheet_link_tag "_users", :media => "all" %>

<div class="register_smoker">
  <div class="card border-none mb-3 p-3 mx-auto">
    <div class="bg-transparent ml-2 mt-2">
      <h5>新規登録</h5>
      <div class="form_groups">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="normal">
          <div class="form_group">
            <label>名前</label>
            <%= f.text_field :name, :placeholder => "名前を入力して下さい", class: " form" %>
          </div>
          <div class="form_group">
            <label>メールアドレス</label>
            <%= f.text_field :email, :placeholder => "メールアドレスを入力して下さい", class: "form" %>
          </div>
        </div>

        <div class="double">
          <div class="form_group">
            <label>購入頻度</label>
            <div style="display:flex">
              <%= f.text_field :days, autofocus: true, autocomplete: "email", class: "form" %>
              <div class="field">日に1回</div>
              <%= f.text_field :boxes, autofocus: true, autocomplete: "email", class: "form" %>
              <div class="field">箱購入していました。</div>
            </div>
          </div>
        </div>

        <div class="normal">
          <div class="form_group">
            <label>パスワード</label>
            <%= f.text_field :password, :placeholder => "パスワードを入力して下さい", class: " form" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
          </div>
          <div class="form_group">
            <label>パスワード確認</label>
            <%= f.text_field :password_confirmation, :placeholder => "パスワードを入力して下さい", class: "form" %>
          </div>
        </div>
        
        <div class="form_group">
          <%= f.submit "新規登録", data: { confirm: "更新しますか？"}, class:"btn btn-dark w-100"  %>
        </div>

        <hr>
        <div class="guest_login">
          <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class:"btn btn-warning mt-3 w-100" %>
        </div>
        <div class="register_user">
          <%= link_to 'アカウントを既にお持ちの方', user_session_path, class:"btn btn-secondary w-100" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
