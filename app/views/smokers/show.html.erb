<%= stylesheet_link_tag "_smokers", :media => "all" %>

<div class="smoker_profile">
  <% if @smoker.image? %>
  <%= image_tag @smoker.image.url, class: "show_icon" %>
  <% else %>
  <% end %>
  <div class="smoker_name">
    <strong><%= @smoker.name %></strong>
  </div>

  <div class="balloon">
    <% if @smoker.word? %>
      <%= @smoker.word %>
    <% else %>
      <h6>よろしくお願いします。</h6>
    <% end %>
  </div>

  <div class="btn_group">
    <%= link_to '削除', smoker_path(@smoker), method: :delete, data: { confirm: "削除しますか？"}, class:"btn btn-danger btn-lg"  %>

    <%= link_to '編集', edit_smoker_path(@smoker), class:"btn btn-primary btn-lg"  %>
  </div>
</div>